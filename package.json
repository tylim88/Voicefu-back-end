{
    "name": "voicefu",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "divider": "=============================basic======================================",
        "setup": "rm -rf node_modules && npx -y husky install && npm i",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "pretty": "pretty-quick --stage --brach main",
        "tsc": "rm -rf dist && tsc -b && tsc-alias -p tsconfig.json",
        "divider1": "============================dev========================================",
        "dev": "(docker run --rm -p 127.0.0.1:50021:50021 voicevox/voicevox_engine:cpu-ubuntu20.04-latest || true) && rm -rf dist && cp -fr dev.env.json env.json && nodemon",
        "d-deploy-f": "rm -rf functions/lib && cp -fr dev.env.json env.json && npm run build --prefix functions && npm run deploy --prefix functions"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,md,json,yml}": [
            "eslint --fix",
            "pretty-quick --stage --brach main"
        ]
    },
    "dependencies": {
        "@ts-rest/core": "^3.18.1",
        "@ts-rest/express": "^3.18.1",
        "all-package-names": "^2.0.648",
        "axios": "^1.3.4",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "firebase-admin": "^11.5.0",
        "firelord": "^2.4.0",
        "form-data": "^4.0.0",
        "formidable": "^2.1.1",
        "get-file-object-from-local-path": "^1.0.2",
        "jsdom": "^21.1.1",
        "openai": "^3.2.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/formidable": "^2.0.5",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "env-cmd": "^10.1.0",
        "eslint": "~8.15.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-json": "^3.1.0",
        "eslint-plugin-markdown": "^3.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "eslint-plugin-yml": "^1.4.0",
        "lint-staged": "^13.2.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^5.0.2"
    }
}
