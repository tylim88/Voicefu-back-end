{
    "compilerOptions": {
        "module": "commonjs",
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": ["src"]
}
